<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:id="@+id/rlcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivDoc"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignRight="@+id/ivDoc"
            android:layout_alignEnd="@+id/ivDoc"
            android:layout_alignLeft="@+id/ivDoc"
            android:layout_alignStart="@+id/ivDoc" />

        <ImageView
            android:id="@+id/ivDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/aboutbg" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/tvdesc"
            android:layout_alignLeft="@+id/tvdesc"
            android:layout_alignStart="@+id/tvdesc"
            android:layout_alignRight="@+id/tvdesc"
            android:layout_alignEnd="@+id/tvdesc" />

    </RelativeLayout>

</android.support.v7.widget.CardView>